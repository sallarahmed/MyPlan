<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:orientation="vertical"
    android:gravity="center">


    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_logo"
            android:layout_gravity="center_horizontal"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"/>




            <EditText
                android:drawableLeft="@drawable/ic_name1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="20dp"
                android:hint="Name"
                android:id="@+id/et_name_signup"
                android:background="@drawable/roundtv"
                android:textAlignment="center"
                android:singleLine="true" />



            <EditText
                android:drawableLeft="@drawable/ic_username1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="20dp"
                android:hint="Email"
                android:id="@+id/et_username_signup"
                android:background="@drawable/roundtv"
                android:textAlignment="center"
                android:singleLine="true"
                android:inputType="textEmailAddress"/>




            <EditText
                android:drawableLeft="@drawable/ic_pass1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="20dp"
                android:hint="Password"
                android:id="@+id/et_password_signup"
                android:inputType="textPassword"
                android:background="@drawable/roundtv"
                android:textAlignment="center"
                android:singleLine="true" />



            <EditText
                android:drawableLeft="@drawable/ic_pass1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="20dp"
                android:hint="Confirm Password"
                android:id="@+id/et_c_password_signup"
                android:inputType="textPassword"
                android:background="@drawable/roundtv"
                android:textAlignment="center"
                android:singleLine="true" />


        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="signup"
            android:layout_gravity="center_horizontal"
            android:layout_margin="50dp"
            android:id="@+id/btnSignup_signup"
            android:textColor="@android:color/white"
            android:background="@drawable/roundbuttons"
            />


    </LinearLayout>

</LinearLayout>